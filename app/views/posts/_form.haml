= form_for(@post) do |f|

  = error_massages_for(@post)

  .field
    = f.label :title
    %br
    = f.text_field :title, size: 50

  .field
    = f.label :excerpt
    %br
    = f.text_area :excerpt, cols: 40, rows: 10

  .field
    = f.label :body
    %br
    = f.text_area :body, cols: 40, rows: 20

  .actions
    = f.submit