<%= form_for @inquiry do |f| %>

  <%= error_massages_for(@inquiry) %>

  <div class="field">
    <%= f.label :subject %>: <%= f.select :subject, options_for_subject %>
  </div>

  <div class="field">
    <%= f.text_field :name, :placeholder => "your name" %>
  </div>

  <div class="field">
    <%= f.text_field :email, :placeholder => "email" %>
  </div>

  <div class="field">
    <%= f.text_area :message, :placeholder => "Explain the problem/question in detail" %>
  </div>

  <p><%= f.submit :class => "button" %></p>
<% end %>